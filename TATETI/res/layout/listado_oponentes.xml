<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textOponente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_Listado"
        android:layout_marginTop="@dimen/top_titulo_listado"
        android:text="@string/label_listado"
        android:textColor="@color/letras"
        tools:ignore="RtlHardcoded" />

    <ListView
        android:id="@+id/listOponentes"
        android:layout_width="wrap_content"
        android:layout_height="248dp"
        android:layout_marginTop="@dimen/top_listado_oponentes" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.29"
        android:paddingBottom="15dp" >

        <Button
            android:id="@+id/btnconexion"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/left_reiniciar"
            android:background="@drawable/imgvolver"
            android:textColor="@color/letras"
            tools:ignore="RtlHardcoded" />

        <CheckBox
            android:id="@+id/checkEsperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_boton_conexion"
            android:text="@string/activar_deteccion"
            android:textColor="@color/letras"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</LinearLayout>